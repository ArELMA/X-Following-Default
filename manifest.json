{
    "manifest_version": 3,
    "name": "X.com Follow Only",
    "version": "1.0.0",
    "description": "x.com を開いたとき自動で『フォロー中』タブに切り替えます",
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}